<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:geckoPose="http://schemas.android.com/apk/res-auto">

    <at.steinbacher.geckoposelib.view.SkeletonView
        android:id="@+id/first_skeleton_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:clickable="false"
        geckoPose:drawLines="true"
        geckoPose:drawAngles="false"
        />

    <at.steinbacher.geckoposelib.view.SkeletonView
        android:id="@+id/second_skeleton_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:clickable="false"
        geckoPose:drawLines="true"
        geckoPose:drawAngles="false"
        />
</androidx.constraintlayout.widget.ConstraintLayout>